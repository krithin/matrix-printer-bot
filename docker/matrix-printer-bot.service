[Unit]
Description=A matrix bot that does amazing things!

[Service]
Type=simple
User=matrix-printer-bot
Group=matrix-printer-bot
WorkingDirectory=/path/to/matrix-printer-bot/docker
ExecStart=/usr/bin/docker-compose up matrix-printer-bot
ExecStop=/usr/bin/docker-compose stop matrix-printer-bot
RemainAfterExit=yes
Restart=always
RestartSec=3

[Install]
WantedBy=multi-user.target